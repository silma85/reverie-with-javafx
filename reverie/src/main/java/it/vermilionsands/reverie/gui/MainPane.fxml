<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.FlowPane?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.vermilionsands.reverie.gui.MainPaneController">
   <children>
      <MenuBar scaleShape="false">
        <menus>
          <Menu text="_File">
            <items>
              <MenuItem fx:id="fileExit" onAction="#fileExitAction" text="_Esci">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
          </Menu>
          <Menu text="_Debug">
            <items>
              <MenuItem fx:id="debugReloadPatterns" onAction="#reloadPatternAction" text="_Ricarica azioni">
              </MenuItem>
              <MenuItem fx:id="debugReloadItems" onAction="#reloadObjectsAction" text="_Ricarica oggetti">
              </MenuItem>
            </items>
          </Menu>
          <Menu text="_?">
            <items>
              <MenuItem text="Informazioni _su..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Text fx:id="statusText" strokeType="OUTSIDE" strokeWidth="0.0" text="Status line v0.1.BETA">
         <VBox.margin>
            <Insets left="6.0" right="6.0" top="6.0" />
         </VBox.margin>
      </Text>
      <VBox>
         <children>
            <TextArea fx:id="adventureText" editable="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="800.0" text="What? Some text here?" wrapText="true">
               <VBox.margin>
                  <Insets top="6.0" />
               </VBox.margin>
            </TextArea>
            <TextArea fx:id="adventureCommandResponses" editable="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="800.0">
               <VBox.margin>
                  <Insets top="6.0" />
               </VBox.margin>
            </TextArea>
            <HBox alignment="TOP_RIGHT" prefHeight="32.0" prefWidth="600.0">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#sayButtonAction" prefHeight="31.0" prefWidth="89.0" text="Invia">
                     <HBox.margin>
                        <Insets right="4.0" top="6.0" />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="adventureCommands" onKeyPressed="#keyPressedAction" prefHeight="31.0" prefWidth="768.0" promptText="Inserisci un comando...">
                     <HBox.margin>
                        <Insets left="4.0" top="6.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="6.0" right="6.0" top="6.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
